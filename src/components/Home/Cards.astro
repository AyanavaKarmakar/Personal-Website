---
import { HomeTexts } from "../../utils/HomeTexts";
---

<div class="flex items-center justify-center">
  <div
    class="w-[calc(100vw-100px)] lg:w-[calc(100vw-750px)] h-[calc(100vh-175px)] m-5"
  >
    {
      HomeTexts.map((text) => {
        const { heading, para } = text;
        return (
          <div class="text-left pt-5">
            <h1 class="font-semibold tracking-wide text-4xl">{heading}</h1>
            <h2 class="text-2xl pt-2">{para}</h2>
          </div>
        );
      })
    }
  </div>
</div>
